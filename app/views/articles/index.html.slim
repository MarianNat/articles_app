h2= time_now
= link_to 'Read mode', read_articles_path
h1
  | Articles ( #{articles_count} )
.new_article
  = link_to 'New article', new_article_path
.articles
  .th
    p.name Name
    p Created
    p Updated
  - @articles.each do |article|
    .article
      p.name= link_to article.name, article
      p= article.created_at
      p= article.updated_at