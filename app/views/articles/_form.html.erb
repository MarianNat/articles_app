<%= form_for @article do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :a_content, 'Article' %><br>
    <%= f.text_area :a_content %>
  </div>
  <div class="action">
    <%= f.submit 'Send' %>
  </div>
<% end %>